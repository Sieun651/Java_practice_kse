import java.util.Scanner;

public class Practice8 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num = 0;
		String str = " ";
		
		while(true) {
			System.out.print("번호 선택 : ");
			num = sc.nextInt();
			
			switch(num) {
			case 1: str="입력"; break;
			case 2: str="검색"; break;
			case 3: str="삭제"; break;
			}
			System.out.printf("%s를 선택하셨습니다.\n", str);
			System.out.println();
		}
	}
}
